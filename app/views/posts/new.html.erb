<%= javascript_pack_tag 'post/new' %>
<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        <div class="container">
          <div class="post-card-title">
            <p class="post-new">投稿ページ</p>
          </div>
            <%= render 'partial/sidemenu' %>
        </div>
      </div>
      <div class="card-body">
        <%= form_with model: @post, class: "upload-images p-0 border-0" do |f| %>
          <div class="form-group row mt-2">
            <div class="col-auto pr-0">
              <%= image_tag current_user.avatar.to_s, class: "post-profile-icon" %>
            </div>
            <div class="col pl-0">
              <label class="control-label">タイトル</label>
              <%= f.text_field :title, class: "form-control", placeholder: "タイトルを書く" %>
            </div>
          </div>
          <div class="mb-3">
            <label class="control-label">説明</label>
            <%= f.text_area :body, class: "form-control", placeholder: "説明書く", size: "100x10" %>
          </div>
          <div class="form-group">
            <label class="control-label">出演アーティスト</label>
            <%= f.text_field :artist, class: "form-control" %>
          </div>
          <div class="form-group">
            <label class="control-label">会場</label>
            <%= f.text_field :live_venue, class: "form-control" %>
          </div>
          <div class="form-group">
            <label class="control-label">開催日</label>
            <%= f.date_field :start_date, value: @post.start_date, class: "form-control" %>
          </div>
          <div class="form-group">
            <label class="control-label">開演時間</label>
            <%= f.time_field :start_time, value: @post.start_time, class: "form-control" %>
          </div>
          <div class="form-group">
            <label class="control-label">閉場時間</label>
            <%= f.time_field :ending_time, value: @post.ending_time, class: "form-control" %>
          </div>
          <div class="form-group">
            <label class="control-label">写真</label>
            <%= f.fields_for :photos do |i| %>
              <%= i.file_field :image, class: "form-control" %>
            <% end %>
          </div>
          <%= f.submit "投稿する", class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
